<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <gradient android:angle="-90" android:startColor="#e57373" android:endColor="#ef9a9a" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <gradient android:angle="-90" android:startColor="#d32f2f" android:centerColor="#f44336" android:endColor="#e57373" />
        </shape>
    </item>

</selector>